# Phenopackets Migration Environment Configuration

# Database Configuration
# Old normalized database (source)
OLD_DATABASE_URL=postgresql+asyncpg://hnf1b_user:hnf1b_pass@localhost:5433/hnf1b_db

# New phenopackets database (target)
DATABASE_URL=postgresql+asyncpg://hnf1b_user:hnf1b_pass@localhost:5433/hnf1b_phenopackets

# API Configuration
JWT_SECRET=your-secret-key-here
PHENOPACKET_SCHEMA_VERSION=2.0.0

# External Services (optional)
NCBI_API_KEY=
ENSEMBL_API_URL=https://rest.ensembl.org

# Ontology Configuration
HPO_VERSION=2024-01-01
MONDO_VERSION=2024-01-01
LOINC_VERSION=2.76

# Migration Settings
MIGRATION_BATCH_SIZE=1000
VALIDATE_PHENOPACKETS=true
MIGRATION_LOG_LEVEL=INFO

# API Settings
API_VERSION=2.0.0
API_TITLE=HNF1B Phenopackets API
API_DESCRIPTION=GA4GH Phenopackets v2 compliant API for HNF1B disease data
CORS_ORIGINS=["*"]

# Feature Flags
ENABLE_LEGACY_ENDPOINTS=false
ENABLE_AUDIT_LOG=true
ENABLE_VALIDATION=true

# Performance Settings
MAX_QUERY_LIMIT=1000
DEFAULT_QUERY_LIMIT=100
CONNECTION_POOL_SIZE=20
CONNECTION_MAX_OVERFLOW=10