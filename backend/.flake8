[flake8]
max-line-length = 88
extend-ignore = E203, W503, D100, D101, D102, D103, D104, D105, D106, D107, D401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    data/
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow missing docstrings in tests
    test_*.py:D100,D101,D102,D103,D104
    # Allow missing docstrings in migration scripts
    migrate_*.py:D100,D101,D102,D103,D104